---
import Layout from '../layouts/Layout.astro'
import '../styles/global.css'

const tutoriales = [
  { titulo: 'Cómo limpiar tu PC', categoria: 'Hardware', enlace: '#' },
  { titulo: 'Actualización de Windows', categoria: 'Software', enlace: '#' },
  { titulo: 'Configuración de firewall', categoria: 'Seguridad', enlace: '#' },
  {
    titulo: 'Optimización de disco duro',
    categoria: 'Optimización',
    enlace: '#',
  },
  { titulo: 'Instalación de antivirus', categoria: 'Seguridad', enlace: '#' },
  { titulo: 'Limpieza de registros', categoria: 'Software', enlace: '#' },
]
---

<Layout title='Tutoriales - TecnoMantén'>
  <main>
    <h1>Tutoriales <span class='text-gradient'>Prácticos</span></h1>
    <p class='instrucciones'>
      Aprende a mantener y optimizar tu equipo con nuestros tutoriales paso a
      paso. Desde limpieza básica hasta configuraciones avanzadas de seguridad.
    </p>
    <div class='servicios-grid'>
      {
        tutoriales.map((tutorial) => (
          <div class='tutorial-item'>
            <h3>{tutorial.titulo}</h3>
            <span class='categoria'>{tutorial.categoria}</span>
            <a href={tutorial.enlace} class='ver-tutorial'>
              Ver tutorial
            </a>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
