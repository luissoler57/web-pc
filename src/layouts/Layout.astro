---
import Header from '../components/Header.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Mantenimiento de computadoras y software'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <footer>
      <p>&copy; 2023 TecnoMant√©n. Todos los derechos reservados.</p>
    </footer>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --header-bg: #1a1a1a;
    --text-color: #ffffff;
    --accent-color: #646cff;
    --bg-color: #13151a;
  }
  html {
    font-family: system-ui, sans-serif;
    background: var(--bg-color);
    color: var(--text-color);
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
  }
  body {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  main {
    flex: 1;
  }
  footer {
    background-color: var(--header-bg);
    color: var(--text-color);
    text-align: center;
    padding: 1rem;
    margin-top: 2rem;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  html.light-theme {
    --header-bg: #f0f0f0;
    --text-color: #13151a;
    --accent-color: #4a4fcc;
    --bg-color: #ffffff;
  }
</style>

<script>
  function setTheme(theme) {
    document.documentElement.classList.toggle('light-theme', theme === 'light')
    localStorage.setItem('theme', theme)
  }

  const storedTheme = localStorage.getItem('theme') || 'dark'
  setTheme(storedTheme)

  document.addEventListener('themeChange', (e) =>
    setTheme((e as CustomEvent).detail.theme)
  )
</script>
